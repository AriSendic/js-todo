<div ng-app="app">
  <div ng-controller="todoCtrl">
    <div ng-repeat="task in list track by $index" ng-click="completeTask($index)">
    <p>{{task}}</p>
    <input ng-model="task">
  </div>
  <h3>Add an item:</h3>
  <input ng-model="newItem">
  <button ng-click="addItem(newItem)"> Add it!</button>

  </div>
</div>
